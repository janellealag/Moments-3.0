					<button type="submit" class="btn btn-primary" formmethod="get" formaction="/businessman/requirements">Show PDF</button>
				</form>
        <% } %>
                
                </div>
                </div>

        </fieldset> 
    </div>
    

	<!-- END OF YOUR CODES -->
